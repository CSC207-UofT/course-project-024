                     <TextField fx:id="newDeckName" layoutX="49.0" layoutY="244.0" maxWidth="200.0" promptText="New Name..."/>
                     <Button layoutX="79.0" layoutY="278.0" onAction="#onRenameDeckButtonClick" text="Rename Deck" />
                     <Button layoutX="83.0" layoutY="331.0" onAction="#onDeleteDeckButtonClick" text="Delete Deck" />
                     <Button layoutX="167.0" layoutY="542.0" onAction="#onMainMenuButtonClick" text="Main Menu" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </center>
</BorderPane>
