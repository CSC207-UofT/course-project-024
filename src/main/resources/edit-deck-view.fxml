<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.MainUI">
    <top>
        <Label text="Flashcards!" BorderPane.alignment="TOP_CENTER" />
    </top>
   <center>
      <SplitPane dividerPositions="0.6879699248120301" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <StackPane fx:id="currentFrontView" layoutX="55.0" layoutY="85.0" prefHeight="150.0" prefWidth="200.0" />
                  <StackPane fx:id="currentBackView" layoutX="299.0" layoutY="85.0" prefHeight="150.0" prefWidth="200.0" />
                     <Button layoutX="241.0" layoutY="291.0" onAction="#onEditCardButtonClick" text="Edit Card" />
                  <TextField fx:id="currentBackText" layoutX="325.0" layoutY="256.0"/>
                  <TextField fx:id="currentFrontText" layoutX="81.0" layoutY="256.0"/>
                  <Button layoutX="462.0" layoutY="291.0" mnemonicParsing="false" onAction="#onNextCardButtonClick" text="Next" />
                  <Button layoutX="23.0" layoutY="291.0" mnemonicParsing="false" onAction="#onPreviousCardButtonClick" text="Previous" />
               </children></AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                     <ComboBox fx:id="deckSelect" layoutX="73.0" layoutY="26.0" onAction="#onDeckSelect" promptText="Select Deck..." AnchorPane.leftAnchor="73.0" />
                     <Label layoutX="104.0" layoutY="73.0" text="Add Card" />
                  <TextField fx:id="cardFrontText" layoutX="81.0" layoutY="98.0" maxWidth="100.0" promptText="Front Text..." />
