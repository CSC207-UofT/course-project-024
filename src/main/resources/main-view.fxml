<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml"
                fx:controller="UI.MainUI">
    <top>
        <Label BorderPane.alignment="TOP_CENTER" text="Flashcards!"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button onAction="#onCreateDeckButtonClick" text="Create New Deck"/>
            <Button onAction="#onStudyDeckButtonClick" text="Study Existing Deck"/>
            <Button onAction="#onEditDeckButtonClick" text="Edit Existing Deck"/>
            <Button onAction="#onLogoutButtonClick" text="Logout"/>
            <Button onAction="#onDebugButtonClick" text="Debug"/>
        </VBox>
    </center>
</BorderPane>
