<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.MenuButton?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="UI.MainUI">
    <top>
        <Label BorderPane.alignment="TOP_CENTER" text="Flashcards!"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <ComboBox fx:id="deckSelect"/>
            <MenuButton fx:id="sessionSelect" text="Select Session"/>
            <Button onAction="#onStartSessionSubmit" fx:id="studyButton" text="Start Session"/>
        </VBox>
    </center>
</BorderPane>
